<?xml version="1.0" encoding="UTF-8"?>
<included>
    <appender name="SLACK-DEMO-WARN" class="com.github.maricn.logback.SlackAppender">
        <webhookUri>${demo-slack-alarm}</webhookUri>
        <channel>#알림-데모서버-오류</channel>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>${ERROR_LOG_PATTERN}</pattern>
        </layout>
        <username>알림봇</username>
        <iconEmoji>:bimo:</iconEmoji>
    </appender>

    <appender name="DEMO_ASYNC_SLACK" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="SLACK-DEMO-WARN"/>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>DENY</onMatch>
            <onMismatch>ACCEPT</onMismatch>
        </filter>
    </appender>
</included>
